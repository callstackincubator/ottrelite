{
  "name": "@ottrelite/backend-platform",
  "version": "0.1.0",
  "description": "Platform backend implementation for @ottrelite/core React Native tracing framework (ATrace or OSSignposter)",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "author": "Callstack <hello@callstack.com>",
  "files": [
    "src",
    "react-native.config.js",
    "lib",
    "nitrogen",
    "android/build.gradle",
    "android/gradle.properties",
    "android/CMakeLists.txt",
    "android/src",
    "ios/**/*.h",
    "ios/**/*.m",
    "ios/**/*.mm",
    "ios/**/*.cpp",
    "ios/**/*.swift",
    "app.plugin.js",
    "*.podspec",
    "README.md"
  ],
  "scripts": {
    "build": "nitro-codegen --logLevel=\"debug\" && pnpm run typescript",
    "clean": "del-cli android/build node_modules/**/android/build lib",
    "lint": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "lint-ci": "eslint \"**/*.{js,ts,tsx}\" -f @jamesacarr/github-actions",
    "postinstall": "pnpm run build || exit 0;",
    "typecheck": "tsc --noEmit",
    "typescript": "tsc",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "tracing",
    "trace",
    "otel",
    "opentelemetry",
    "observability",
    "performance"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/callstackincubator/ottrelite.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/callstackincubator/ottrelite/issues"
  },
  "homepage": "https://github.com/callstackincubator/ottrelite#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@ottrelite/core": "workspace:^",
    "del-cli": "^6.0.0",
    "eslint": "^8.57.1",
    "jest": "^30.0.4",
    "nitro-codegen": "^0.27.2",
    "react-native-nitro-modules": "0.29.6",
    "release-it": "^19.0.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@babel/runtime": "^7.25.0",
    "@ottrelite/core": "workspace:^",
    "react": "19.1.0",
    "react-native": "^0.81.0",
    "react-native-nitro-modules": "0.29.6"
  }
}
