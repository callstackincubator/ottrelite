{
  "name": "@ottrelite/core",
  "version": "0.0.1",
  "description": "Extensible, unified tracing framework for React Native",
  "main": "lib/index",
  "module": "lib/index",
  "types": "lib/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "author": "Callstack <hello@callstack.com>",
  "files": [
    "src",
    "react-native.config.js",
    "lib",
    "nitrogen",
    "android/build.gradle",
    "android/gradle.properties",
    "android/CMakeLists.txt",
    "android/src",
    "cpp",
    "ios/**/*.h",
    "ios/**/*.m",
    "ios/**/*.mm",
    "ios/**/*.cpp",
    "ios/**/*.swift",
    "*.podspec",
    "README.md"
  ],
  "scripts": {
    "postinstall": "pnpm run build || exit 0;",
    "typecheck": "tsc --noEmit",
    "clean": "del-cli android/build node_modules/**/android/build lib",
    "lint": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "lint-ci": "eslint \"**/*.{js,ts,tsx}\" -f @jamesacarr/github-actions",
    "typescript": "tsc",
    "build": "nitro-codegen --logLevel=\"debug\" && pnpm run typescript",
    "build:watch": "tsc --watch",
    "publish:npm": "pnpm publish --access public",
    "publish:yalc": "yalc publish"
  },
  "keywords": [
    "react-native",
    "tracing",
    "trace",
    "observability",
    "performance"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/callstackincubator/ottrelite.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/callstackincubator/ottrelite/issues"
  },
  "homepage": "https://github.com/callstackincubator/ottrelite#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/runtime": "^7.25.0",
    "@opentelemetry/api": "^1.9.0",
    "del-cli": "^6.0.0",
    "eslint": "^8.57.1",
    "jest": "^30.0.4",
    "nitro-codegen": "^0.27.2",
    "react-native-nitro-modules": "0.29.6",
    "typescript": "^5.8.3",
    "react-native": "^0.81.0",
    "react": "19.1.0"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-native": ">=0.76",
    "react-native-nitro-modules": ">=0.29"
  }
}
